# LLM Configuration (for Approach 4)
# Choose one: groq or ollama
LLM_PROVIDER=groq

# Groq API Configuration (free tier)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Ollama Configuration (local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Model Paths
NER_MODEL=en_ner_bc5cdr_md
NER_MODEL_SECONDARY=en_core_med7_trf

# Thresholds
FUZZY_MATCH_THRESHOLD=0.85
CONFIDENCE_THRESHOLD=0.7

# Data Paths
ICD10_CODES_PATH=data/reference/icd10_diabetes_codes.json
SNOMED_SUBSET_PATH=data/reference/snomed_diabetes_subset.json
SNOMED_CROSSWALK_PATH=data/reference/snomed_icd10_crosswalk.json
DIABETES_KG_PATH=data/reference/diabetes_knowledge_graph.json

# Resolution Mode: "direct_icd10" or "snomed"
RESOLUTION_MODE=direct_icd10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
